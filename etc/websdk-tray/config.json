{
    "menu": [
        {
            "name": "on",
            "label": "WebSdk On",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/start-mariadb.bat",
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/start-cgi.bat",
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/start-nginx.bat"
            ]
        },
        {
            "name": "off",
            "label": "WebSdk Off",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/stop-nginx.bat",
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/stop-cgi.bat",
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/stop-mariadb.bat"
            ]
        },
        {
            "name": "adm",
            "label": "Adminer",
            "exec": [
                "cmd.exe /C C:/WebSdk/bin/adminer.bat"
            ],
            "visible": [
                "on",
                "c:/WebSdk/var/www/adminer"
            ]
        },
        {
            "name": "pma",
            "label": "PhpMyAdmin",
            "exec": [
                "cmd.exe /C C:/WebSdk/bin/pma.bat"
            ],
            "visible": [
                "on",
                "c:/WebSdk/var/www/PhpMyAdmin"
            ]
        },
        {
            "name": "php7",
            "label": "PHP 7.4 Runtime",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/switch-php.bat 7.4"
            ],
            "visible": [
                "no"
            ]
        },
        {
            "name": "php5",
            "label": "PHP 5.5 Runtime",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/sdk/scripts/switch-php.bat 5.5"
            ],
            "visible": [
                "no"
            ]
        },
        {
            "name": "httpd",
            "label": "Switch to Apache + PHP8.3",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/httpd/start.bat"
            ]
        },
        {
            "name": "apache",
            "label": "Apache SSL",
            "exec": [
                "cmd.exe /C C:/WebSdk/lib/apache/start.bat"
            ],
            "off": [
                "taskkill.exe /f /IM httpd.exe"
            ],
            "visible": [
                "C:/WebSdk/lib/apache"
            ],
            "check": [
                "httpd.exe"
            ]
        }
    ],
    "check": {
        "process": [
            "mariadbd.exe",
            "nginx.exe"
        ],
        "items": [
            "on",
            "off"
        ]
    },
    "icons": {
        "dark": {
            "on": "dark/icon_on.png",
            "off": "dark/icon_off.png"
        },
        "light": {
            "on": "light/icon_on.png",
            "off": "light/icon_off.png"
        }
    },
    "autostart": false
}